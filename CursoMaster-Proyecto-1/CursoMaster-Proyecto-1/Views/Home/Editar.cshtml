@model CursoMaster_Proyecto_1.Models.Usuarios

@{
    ViewData["Title"] = "Editar Usuarios";
}

<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Eliminar" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Elminiar Usuario</a>
        </div>
    </div>
</div>

<br />

<div class="row">
    <div class="col-12">
        <div class="card card-border">
            <div class="card card-header">
                <h3><strong>Agregar un nuevo de Usuarios</strong></h3>
            </div>
            <div class="card card-body">

               <form asp-action="Editar" asp-Controller="Home" method="post">

                   <div asp-validation-summary="ModelOnly" class=text-danger></div>

                   <input type="hidden" asp-for="Id" />

                   <div class="form-group mt-3">
                       <label asp-for="Name" class="control-label">Nombre</label>
                       <input asp-for="Name" class="form-control" type="text"  placeholder="Nombre del usuario..." />
                       <span asp-validation-for="Name" class="text-danger"></span>
                   </div>

                   <div class="form-group mt-3" >
                       <label asp-for="phoneNumber" class="form-label">Numero de Telefono</label>
                       <input asp-for="phoneNumber" type="text" class="form-control" placeholder="Numero de telefono..." />
                       <span asp-validation-for="phoneNumber" class="text-danger"></span>
                   </div>

                   <div class="form-group mt-3">
                       <label asp-for="DocumentiId" class="control-label">Cedula</label>
                       <input asp-for="DocumentiId" type="text" class="form-control" placeholder="Cedula..." />
                       <span asp-validation-for="DocumentiId" class="text-danger"></span>
                   </div>

                   <div class="form-group mt-3">
                       <label asp-for="Email" class="control-label" >Correo</label>
                       <input type="email" asp-for="Email" class="form-control" placeholder="Correo Electronico..." />
                       <span asp-validation-for="Email" class="text-danger"></span>
                   </div>
                   <br/>
                   <div class="mt-3" >
                       <button type="submit" class="btn btn-success"><i class="bi bi-pencil-square"></i>Actualizar Usuario</button>
                       <a asp-action="Index" asp-Action="Home" class="btn btn-secondary">Volver al Inicio</a>
                   </div>

               </form>
                
            </div>
        </div>
    </div>
</div>